                                    option(value='Accounting') Accounting
                                    option(value='Health') Health
                                    option(value='Agriculture') Agriculture
                                    option(value='Education') Education
                                    option(value='Panchayat') Panchayat
                                    option(value='Development') Development
                                    option(value='Construction') Construction
                                    option(value='Statistics') Statistics
                                    option(value='Animal Husbandry') Animal Husbandry
                                    option(value='Social Welfare') Social Welfare
                                    option(value='Cooperation') Cooperation
                                    option(value='ICDS') ICDS
                                    option(value='Family Welfare') Family Welfare
                                    option(value='Ayurveda') Ayurveda
                                    option(value='Malaria') Malaria
                                    option(value='Establishment') Establishment
                                    option(value='General') General
                                    option(value='Mission Mangalam') Mission Mangalam
                                    option(value='MGNREGA') MGNREGA
                                    option(value='IRD') IRD
                                    option(value='Free Period') Free Period
                                    option(value='SBM') SBM
                                    option(value='Other') Other
                    .card-footer.p-2
                        button.btn.bg-gradient-success.mb-0(type='submit') Create
